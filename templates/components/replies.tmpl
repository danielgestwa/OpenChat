<div class="replies">
    {{range $reply := .replies}}
        <div class="message">
            <div class="message-header">
                <span>{{$reply.User}}</span>
            </div>
            <div class="message-content">
                {{$reply.Message}}
            </div>
            <div class="message-footer">
                <div class="votes">
                    <!-- <span>â¬† {{$reply.Upvotes}}</span> -->
                    <button class="votes" hx-post="/upvotes/chats/{{$reply.UUID}}" hx-swap="none">
                        <span>â¬†<span hx-get="/upvotes/chats/{{$reply.UUID}}" hx-trigger="newUpvote_{{$reply.UUID}} from:body" hx-swap="innerHTML">{{$reply.Upvotes}}</span></span>
                    </button>
                </div>
            </div>
        </div>
    {{end}}
</div>