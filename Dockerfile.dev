FROM golang:1.25

WORKDIR /app

# Install Air for live reload
RUN go install github.com/air-verse/air@latest

# Copy go.mod and go.sum
COPY go.mod go.sum ./
RUN go mod download

# Copy the rest of the app (still needed for first run)
COPY . .

# Expose port 80
EXPOSE 80

# Run with Air (watches for changes)
CMD ["air", "-c", ".air.toml"]
